<li class='game' id='{{ id }}' data-name='{{ name }}' data-platform='{{ platform.shortName }}'>
  <span class='toggle_info'></span>
  {{# boxart }}
    <img src='{{ url }}'>
  {{/ boxart }}
  {{^ boxart }}
    <h3>{{ name }}</h3>
  {{/ boxart }}
  <dl class='info'>
    <dt>Game</dt>
    <dd>{{ name }}</dd>
    <dt>File</dt>
    <dd>{{ file.name }}</dd>
    {{# info }}
      <dt>{{ key }}</dt>
      <dd>{{ val }}</dd>
    {{/ info }}
  </dl>
</li>